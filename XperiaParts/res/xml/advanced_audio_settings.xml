<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/dolby_menu_header">

    <com.android.settingslib.widget.TopIntroPreference
        android:key="dolby_top_intro"
        android:title="@string/dolby_menu_header"
        android:summary="@string/dolby_menu_description"/>

    <PreferenceCategory>

        <Preference
            android:key="audio_dolby_sound"
            android:icon="@drawable/ic_dolby"
            android:title="@string/dolby_setting_title"
            android:summary="@string/dolby_setting_summary"
            android:persistent="false">
            <intent
                android:targetPackage="com.dolby.daxappui"
                android:targetClass="com.dolby.daxappui.MainActivity" />
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>
